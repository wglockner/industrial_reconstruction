<?xml version="1.0"?>
<launch>

  <arg name="depth_image_topic"/>
  <arg name="color_image_topic"/>
  <arg name="camera_info_topic"/>
  <arg name="cache_count" default="10"/>
  <arg name="slop" default="0.01"/>
  <arg name="enable_depth_preprocessing" default="true"/>
  <arg name="enable_mesh_postprocessing" default="true"/>
  <arg name="adaptive_parameters" default="true"/>
  <arg name="quality_mode" default="balanced"/>

  <node pkg="industrial_reconstruction" exec="industrial_reconstruction_enhanced" name="industrial_reconstruction_enhanced" output="screen">
    <param name="depth_image_topic" value="$(var depth_image_topic)"/>
    <param name="color_image_topic" value="$(var color_image_topic)"/>
    <param name="camera_info_topic" value="$(var camera_info_topic)"/>
    <param name="cache_count" value="$(var cache_count)"/>
    <param name="slop" value="$(var slop)"/>
    <param name="enable_depth_preprocessing" value="$(var enable_depth_preprocessing)"/>
    <param name="enable_mesh_postprocessing" value="$(var enable_mesh_postprocessing)"/>
    <param name="adaptive_parameters" value="$(var adaptive_parameters)"/>
    <param name="quality_mode" value="$(var quality_mode)"/>
  </node>

</launch>
